---
import type { Frontmatter } from "../types"; // Import the Frontmatter type
import type { MarkdownInstance } from 'astro'; // Import Astro's MarkdownInstance type
import "../styles/global.css";
import Search from "../components/Search.tsx";

// Fetch All Markdown Notes
const notesImport = Object.values(import.meta.glob('../notes/*.md', { eager: true })) as MarkdownInstance<Frontmatter>[];

// Normalize Data - Spread frontmatter and add URL property (With SSR, note.url will be undefined)
const allNotes = notesImport.map((note) => {
	return {
		...note,
		url: `/notes/${note.file.split('/').pop()?.replace('.md', '')}`
	};
});

// Prepare Search List using flatMap to ensure all items have a valid slug
const searchList = allNotes.flatMap(note => {
  const slug = note.file.split('/').pop()?.replace('.md', '');
  
  // If !slug, filter this item out by returning an empty array
  if (!slug) {
    return [];
  }

  // If slug exists, return the search item in an array
  return [{
    title: note.frontmatter.title,
    description: note.frontmatter.description,
    category: note.frontmatter.category || 'Uncategorized',
    slug: slug,
    content: note.rawContent(),
  }];
});

// Group Notes by Category
const notesByCategory = allNotes.reduce((acc, note) => {
    const category = note.frontmatter.category || 'Uncategorized';
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(note);
    // Ensure the accumulator type matches the type of 'allNotes'
    return acc;
}, {} as Record<string, MarkdownInstance<Frontmatter>[]>);
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Apollo Knowledge Base</title>
</head>
<body class="bg-gray-100 text-gray-800">
    <div class="flex flex-col h-screen">
        <!-- Navbar -->
        <nav class="bg-white border-b border-gray-200 w-full shrink-0 shadow-sm">
            <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">

                    <!-- Conditional Branding/Burger Menu -->
                    <div class="flex items-center">
                        <!-- Burger Menu Icon For Mobile -->
                        <div class="lg:hidden">
                            <svg
                                xmlns="http://www.w3.org/2000/svg"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke-width="1.5"
                                stroke="currentColor"
                                class="w-8 h-8"
                                >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
                                />
                                </svg>
                        </div>
                        <!-- Branding for Desktop -->
                        <div class="hidden lg:block">
                            <span class="text-2xl font-bold text-gray-900">apollo</span>
                        </div>
                    </div>

                    <!-- Centered Search Bar -->
                    <div class="flex-1 flex justify-center px-2 lg:ml-6 lg:justify-center">
                        <div class="max-w-md w-full lg:max-w-xl">
                            <label for="search" class="sr-only">Search</label>
                            <div class="relative">
                                <Search client:load searchList={searchList} />
                            </div>
                        </div>
                    </div>
                    <div class="w-24"></div> <!-- Spacer to balance branding -->
                </div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-1 flex overflow-hidden">
            <!-- Categories Sidebar -->
            <aside class="absolute lg:static h-full w-72 bg-gray-50 border-r border-gray-200 overflow-y-auto p-6">
                <h2 class="text-xs font-semibold text-gray-600 uppercase tracking-wider">Categories</h2>
                <nav class="mt-4">
                    <ul class="space-y-4">
                        {Object.entries(notesByCategory).map(([category, notes]) => (
                            <li>
                                <h3 class="font-semibold text-gray-900">{category}</h3>
                                <ul class="mt-2 ml-2 space-y-2 border-l border-gray-300">
                                    {notes.map(note => (
                                        <li>
                                            <a href={note.url} class="block pl-4 text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-200 rounded-r-lg py-1 transition-colors">
                                                {note.frontmatter.title}
                                            </a>
                                        </li>
                                    ))}
                                </ul>
                            </li>
                        ))}
                    </ul>
                </nav>
            </aside>

            <!-- Homepage / Note Display Window -->
            <main class="flex-1 p-12 overflow-y-auto">
                <slot />
            </main>
        </div>
    </div>
</body>
</html>