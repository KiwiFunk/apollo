---
import type { Frontmatter } from "../types"; // Import the Frontmatter type
import type { MarkdownInstance } from 'astro'; // Import Astro's MarkdownInstance type
import "../styles/global.css";
import Search from "../components/Search.tsx";
import DynamicContent from "../components/DynamicContent.tsx";
import BurgerButton from '../components/BurgerButton.tsx';
import Sidebar from '../components/Sidebar.tsx';
import pg from 'pg';

const { Pool } = pg;
// Use import.meta.env to access environment var in Astro
const pool = new Pool({ connectionString: import.meta.env.DATABASE_URL });

// Fetch all notes from the database
const { rows: dbNotes } = await pool.query('SELECT slug, title, description, publish_date, category, content FROM notes ORDER BY publish_date DESC');

// Normalize data to match the structure our components expect
const allNotes = dbNotes.map(note => ({
    url: `/notes/${note.slug}`,
    frontmatter: {
        title: note.title,
        description: note.description,
        publishDate: new Date(note.publish_date).toISOString(),
        category: note.category || 'Uncategorized',
    },
    // Mock the file and rawContent properties for compatibility
    file: `/src/notes/${note.slug}.md`,
    rawContent: () => note.content,
}));

// Prepare Search List using flatMap to ensure all items have a valid slug
const searchList = allNotes.flatMap(note => {
  const slug = note.file.split('/').pop()?.replace('.md', '');
  
  // If !slug, filter this item out by returning an empty array
  if (!slug) return [];

  // If slug exists, return the search item in an array
  return [{
    title: note.frontmatter.title,
    description: note.frontmatter.description,
    category: note.frontmatter.category,
    slug: slug,
    content: note.rawContent(),
  }];
});

// Group Notes by Category
const notesByCategory = allNotes.reduce((acc, note) => {
    const category = note.frontmatter.category || 'Uncategorized';
    if (!acc[category]) {
        acc[category] = [];
    }
    acc[category].push(note);
    // Ensure the accumulator type matches the type of 'allNotes'
    return acc;
}, {} as Record<string, MarkdownInstance<Frontmatter>[]>);
---

<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Apollo Knowledge Base</title>
</head>

<body class="bg-gray-100 text-gray-800">
    <div class="flex flex-col h-screen">
        <!-- Navbar -->
        <nav class="bg-white border-b border-gray-200 w-full shrink-0 shadow-sm">
            <div class="max-w-full mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex items-center justify-between h-16">

                    <!-- Conditional Branding/Burger Menu -->
                    <div class="flex items-center">
                        <!-- Burger Menu Icon For Mobile -->
                        <BurgerButton client:load/>

                        <!-- Branding for Desktop -->
                        <div class="hidden lg:block">
                            <span class="text-2xl font-bold text-gray-900">apollo</span>
                        </div>
                    </div>

                    <!-- Centered Search Bar -->
                    <div class="flex-1 flex justify-center px-2 lg:ml-6 lg:justify-center">
                        <div class="max-w-md w-full lg:max-w-xl">
                            <label for="search" class="sr-only">Search</label>
                            <div class="relative">
                                <Search client:load searchList={searchList} />
                            </div>
                        </div>
                    </div>
                    <div class="w-24"></div> <!-- Spacer to balance branding -->
                </div>
            </div>
        </nav>

        <!-- Main Content Area -->
        <div class="flex-1 flex overflow-hidden">
            
            <!-- Categories Sidebar -->
            <Sidebar client:load notesByCategory={notesByCategory} />

            <!-- Homepage / Note Display Window -->
            <main class="flex-1 p-12 overflow-y-auto">
                <DynamicContent client:idle allNotes={allNotes} notesByCategory={notesByCategory} />
                <slot />
            </main>
        </div>
    </div>

</body>
</html>